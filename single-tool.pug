doctype html
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    link(rel="stylesheet" href="https://meyerweb.com/eric/tools/css/reset/reset.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css")
    link(rel="stylesheet" href="/style")

    script(src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js")

  body

    //Animated gradient
    section.animated_background.animated_background-top.animated_background-small
      div.animated_background_inner
        // img.animated_background_inner_img(src="/bg")

    //For all of the main content
    section.main

      //The highest point of the page which content can be rendered on - used for the navbar
      section.top
        nav
          header
            h1.name
              a(href="/") Richie Sikra
            ul.navbar  
              each item in options.navbar
                li.navbar_item 
                  a(href=item.url) #{item.title}

      //Quick summary
      section.top_content
        
      //The main content of the site
      section.content
        div.single_tool

          div.single_tool_title(style="margin-bottom:14px;")
            h3(style="display:inline; padding-right:7px; font-size: 1.4814814815vh;") Tool:
            h2(style="display:inline; font-size: 1.8518518519vh;") #{tool.title}

          div(style="margin-bottom: 18px;")
            if(tool.use)
              div.single_tool_snippet #{tool.use}
              
          h3(style="font-size: 1.6vh;line-height: 2;") Used In
  
          div(style="margin-bottom: 12px;")
            each project,index in tool.projects
              a(style="text-decoration: none;" href="/projects/" + project.slug) #{project.title}
              if(index < tool.projects.length - 1)
                span(style=" margin-right:4px;") 
                  =", " 

          if(tool.references)
            div(style="margin-bottom: 18px;").single_tool_references
              h3(style="font-size: 1.6vh;line-height: 2;") References 
              each reference,index in tool.references
                a(style="text-decoration: none;" href=reference.url) #{reference.title}
                if(index < tool.references.length - 1)
                  span(style=" margin-right:4px;") 
                    =", " 

          div(style="text-align:center;")
            a(style="text-decoration: none;" href="/tools") View all tools

          //The footer of the website
    section.footer
      section.footer_inner
        //social media icons
        //div.icons.icons-center
          a.icons_icon
            img.icons_icon_image
          a.icons_icon
            img.icons_icon_image
        nav
          ul.footer_navbar
            each item in options.navbar
              li.footer_navbar_item 
                a(href=item.url) #{item.title}
                
        //copyright
        article.copyright
          p.copyright_text Copyright ï¿½ 2018 Richie Sikra. All Rights Reserved.