doctype html
html(lang="en")
  include templates/main/head.pug
  body
    include templates/main/navbar.pug

    //For all of the main content
    main
      article.single_tool
        header
          h1=tool.title

          if(tool.use)
            p=tool.use
          
        section
          header
            h2 Used In
          each project,index in tool.projects
            a(href="/project/" + project.slug)=project.title
            if(index < tool.projects.length - 1)
              span=", " 

        section
          header
            h2 References
          if(tool.references)
            each reference,index in tool.references
              a(href=reference.url)=reference.title
              if(index < tool.references.length - 1)
                span=", "
                
        footer
          a(href="/tools") View all tools

    include templates/main/footer.pug