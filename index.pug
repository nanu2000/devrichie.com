doctype html
html

  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    link(rel="stylesheet" href="https://meyerweb.com/eric/tools/css/reset/reset.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css")
    link(rel="stylesheet" href="/style")

    script(src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js")

  body
  
    //Animated gradient
    section.animated_background.animated_background-top
      div(id="particles-js")
      script(src="/script")
      div.animated_background_inner
        img.animated_background_inner_img(src="/bg")

    //For all of the main content
    section.main

      //The highest point of the page which content can be rendered on - used for the navbar
      section.top
        nav
          header
            h1.name 
              a(href="/") Richie Sikra
            ul.navbar  
              each item in options.navbar
                li.navbar_item 
                  a(href=item.url) #{item.title}

      //Quick summary
      section.top_content
        header.top_content_header.top_content_header-main Hi, I'm Richie
        header.top_content_header.top_content_header-sub 3D Programmer, Web & Game Developer
        //jump to projects
        a.top_content_button(href="#button") View my work
        
      //The main content of the site
      section.content
      
        //Skills/About
        section.skill_container
          div.skill_container_item.skill_container_item-1-2
            header
              h2 About Me
            p 
              ='In 2015 I released my first game Aeroflight, a year later I spent three months creating Stardive and at the end of that year I created a game in C++ within the course of a month.'
              br
              ='Currently I\'m exploring new frontend technologies and writing performance updates for '
              a(href='drumchannel.com') DrumChannel.com
              
          div.skill_container_item.skill_container_item-1-2
            header
              h2 Tools
              p
                each tool,index in tools
                  span(class="skill_container_item_tool")
                    a(class="skill_container_item_tool_title" href="/tools/" + tool.slug) #{tool.title}
                  if (index < tools.length - 1)
                    =", " 
                  if (((index + 1) % 3) === 0)
                    br
            
        //My projects
        section.projects
          
          //A title
          header.projects_header
            h2 Projects
          
          //A single project
          article.project
          
            aside.project_left
              h3.project_left_title StarDive
              p.project_left_description 
                ='Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum viverra porta iaculis. Aliquam erat volutpat. Quisque quis magna eu ex dictum placerat nec ac sem. Nulla et eros ut eros lobortis ultricies.'
              section.project_left_tools_used
                h3 Tools Used
                p Unity 3D, Javascript, C++
                
            section.project_right
              video.project_right_video(id='portfolio-item-video-player')
                source(src='https://devrichie.com/Images/StarDiveWebBanner.mp4')
                
              div.button_container.button_container-center
                a.button_container_button.button_container_button-view
                  span View Project
                a.button_container_button.button_container_button-watch
                  span Watch Video
                  i.play_icon
                  
          //A single small project
          article.project.project-small
          
            img.project_left_image
              
            section.project_right
              h4.project_right_title Title
              p.project_right_description
                ='Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum viverra porta iaculis. Aliquam erat volutpat. Quisque quis magna eu ex dictum placerat nec ac sem. Nulla et eros ut eros lobortis ultricies.'
          
          //When clicked the load more button should load more projects below
          a.projects_load_more_button(href='#')
            ='Load more projects'
            
    section.animated_background.animated_background-relative.animated_background-bottom
      section.animated_background_inner.animated_background_inner-rotated

        //The contact form should send an email to me and prompt a captcha
        article.contact_form

          header.contact_form_header
            h2 Contact Me
          form(action='#')
            label.contact_form_label Name
            input.contact_form_input.contact_form_input-field(placeholder='Your name' type='text' autocomplete='name')

            label.contact_form_label Email Address
            input.contact_form_input.contact_form_input-field(placeholder='Your email' type='email' autocomplete='email')

            label.contact_form_label Message
            textarea.contact_form_input.contact_form_input-textarea(placeholder='How can I help you?')

            input.contact_form_input.contact_form_input-submit(value='Send message' type='submit')

        //The footer of the website
        section.footer
          section.footer_inner
            //social media icons
            div.icons.icons-center
              a.icons_icon
                img.icons_icon_image
              a.icons_icon
                img.icons_icon_image

            //copyright
            article.copyright
              p.copyright_text Copyright ï¿½ 2018 Richie Sikra. All Rights Reserved.

