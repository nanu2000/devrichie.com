doctype html
html(lang="en")
  include templates/main/head.pug
  body
    include templates/main/navbar.pug

    //For all of the main content
    main
      section
        header
          h1 Tools
          p Click on a tool for more details

        ol.dotted.tool_list
          each tool,index in tools
            li
              a(href="/tool/" + tool.slug) #{tool.title}

    include templates/main/footer.pug