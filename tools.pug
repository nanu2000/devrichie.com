doctype html
html
  include templates/main/head.pug
  body
    include templates/main/navbar.pug

    //For all of the main content
    main
      article.tool_list

        header
          h2.tool_list_title Tools
          h3.tool_list_subtitle Click on a tool for more details

        each tool,index in tools
          a.tool_list_item(href="/tool/" + tool.slug) #{tool.title}
          if (index < tools.length - 1 && ((index + 1) % 3) === 0)
            br
          else if(index < tools.length - 1)
            span="-"

    include templates/main/footer.pug