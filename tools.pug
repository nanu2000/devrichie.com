extends templates/main/site.pug

block head
  meta(name="author" content="Richie Sikra")
  meta(name="description" content="Tools")

block main
  section
    header
      h1 Tools
      p Click on a tool for more details

    ol.dotted.tool_list
      each tool,index in tools
        li
          a(href="/tool/" + tool.slug) #{tool.title}