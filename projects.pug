doctype html
html
  include templates/main/head.pug
  body
    include templates/main/navbar.pug

    //For all of the main content
    main
      article
        header
          h2 Projects
          p Click on a project for more details

        section.project_list
          each project,index in projects
            div
              a(href="/project/" + project.slug) #{project.title}
            if (index < projects.length - 1 && ((index + 1) % 3) === 0)
              br

    include templates/main/footer.pug